# ---------------------------------------
# Auth (Login toggle)
# ---------------------------------------
# If false, all login endpoints are disabled and admin is auto-created.
# Also forces EMAIL_ENABLED=false.
LOGIN_ENABLED=true

# ---------------------------------------
# Admin Bootstrap (optional)
# ---------------------------------------
ADMIN_BOOTSTRAP=false
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=admin
ADMIN_VERIFY_EMAIL=true

# ---------------------------------------
# External API keys (optional)
# ---------------------------------------
OPENAI_API_KEY=

# ---------------------------------------
# Email (optional)
# ---------------------------------------
EMAIL_ENABLED=false
PUBLIC_APP_URL=
PUBLIC_API_URL=
RESEND_API_KEY=
RESEND_API_BASE_URL=https://api.resend.com
EMAIL_FROM=HippoBox <no-reply@hippobox.org>
EMAIL_REPLY_TO=

# ---------------------------------------
# API Docs (Swagger/OpenAPI)
# ---------------------------------------
SWAGGER_ENABLED=true
FRONTEND_BASE_PATH=

# ---------------------------------------
# Database (PostgreSQL for Docker)
# ---------------------------------------
DB_DRIVER=postgresql+asyncpg
DB_NAME=hippobox
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=hippobox_secret

# ---------------------------------------
# Vector DB (Qdrant)
# ---------------------------------------
QDRANT_MODE=docker
QDRANT_URL=http://qdrant:6333

# ---------------------------------------
# Redis
# ---------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0