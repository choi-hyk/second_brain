# ---------------------------------------
# Auth (Login toggle)
# ---------------------------------------
# If false, all login endpoints are disabled and admin is auto-created.
# Also forces EMAIL_ENABLED=false.
LOGIN_ENABLED=true


# ---------------------------------------
# Admin Bootstrap (optional)
# ---------------------------------------
# If enabled, the server will create the first admin on startup
# (only when no admin exists yet).
ADMIN_BOOTSTRAP=false
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=admin
ADMIN_VERIFY_EMAIL=true


# ----------------------------------------
# API Docs (Swagger/OpenAPI)
# ----------------------------------------
SWAGGER_ENABLED=true
FRONTEND_BASE_PATH=


# ---------------------------------------
# Email (Resend)
# ---------------------------------------
EMAIL_ENABLED=false
PUBLIC_APP_URL=
PUBLIC_API_URL=
RESEND_API_KEY=
RESEND_API_BASE_URL=https://api.resend.com
EMAIL_FROM=HippoBox <no-reply@hippobox.org>
EMAIL_REPLY_TO=


# ---------------------------------------
# LLM / Embedding
# ---------------------------------------
OPENAI_API_KEY=

EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small


# ---------------------------------------
# Default Database Configuration (SQLite)
# ---------------------------------------
# SQLite is used by default for local development.
# No additional installation is required.
# The database will be stored as a local file.
# ---------------------------------------
DB_DRIVER=sqlite+aiosqlite
DB_NAME=hippobox.db


# ---------------------------------------
# PostgreSQL Configuration (Optional)
# ---------------------------------------
# If you want to switch from SQLite to PostgreSQL:
# 1. Comment out the SQLite settings above.
# 2. Uncomment and fill out the PostgreSQL settings below.

# DB_DRIVER=postgresql+asyncpg
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=
# DB_NAME=hippobox


# ---------------------------------------
# Vector Database (Qdrant)
# ---------------------------------------
# Toggle vector DB usage (Qdrant + semantic search)
VDB_ENABLED=true

# Default: local file-based Qdrant
QDRANT_MODE=local
QDRANT_PATH=./qdrant_storage

# For Docker / Remote Qdrant
# Example:
#   QDRANT_MODE=docker
#   QDRANT_URL=http://localhost:6333
# ---------------------------------------
QDRANT_URL=


# ---------------------------------------
# Redis 
# ---------------------------------------
# Redis mode options 
# true -> use fakeRedisClient in memory
# false -> use runtime redis
# Default: false
REDIS_IN_MEMORY=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
